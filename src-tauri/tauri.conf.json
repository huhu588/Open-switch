{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Open Switch",
  "version": "1.0.0",
  "identifier": "dev.openswitch.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Open Switch",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "OpenCode 配置管理工具",
    "longDescription": "Open Switch工具，支持多 Provider 和 Model 管理、MCP 服务器配置、规则与技能管理。",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 220
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 220
        }
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg5RTI1NjY4NjUzMzY2NUMKUldSY1pqTmxhRmJpaVZGTHZ6SXAxOExuNjFoOFZGandvTGNnWThJSWJkcVRTWERMTUg2c2NFYUoK",
      "endpoints": [
        "https://github.com/huhu888/Open-Switch/releases/latest/download/latest.json"
      ]
    }
  }
}
